<%= form_with(model: menu, local: true, html: { multipart: true }) do |form| %>
  <% if menu.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 text-red-700 rounded">
      <h2 class="font-bold">Please fix the following errors:</h2>
      <ul class="list-disc pl-5">
        <% menu.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- Name -->
    <div>
      <%= form.label :name, class: "block font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <!-- Category -->
    <div>
      <%= form.label :category, class: "block font-medium text-gray-700" %>
      <%= form.text_field :category, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <!-- Price -->
    <div>
      <%= form.label :price, class: "block font-medium text-gray-700" %>
      <%= form.number_field :price, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <!-- Availability -->
    <div class="flex items-center mt-6">
      <%= form.check_box :available, class: "mr-2 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
      <%= form.label :available, class: "text-gray-700" %>
    </div>

    <!-- Description -->
    <div class="md:col-span-2">
      <%= form.label :description, class: "block font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <!-- Image upload -->
    <div class="md:col-span-2">
      <%= form.label :image, class: "block font-medium text-gray-700" %>
      <%= form.file_field :image, direct_upload: true, class: "mt-1 block w-full text-gray-700" %>

      <% if menu.persisted? && menu.image.attached? %>
        <div class="mt-2">
          <%= image_tag menu.image, class: "max-w-xs rounded shadow-md" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Submit -->
  <div class="mt-6">
    <%= form.submit class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
  </div>
<% end %>
