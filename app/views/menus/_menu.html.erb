<div id="<%= dom_id menu %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= menu.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= menu.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Price:</strong>
    <%= menu.price %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Category:</strong>
    <%= menu.category %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Available:</strong>
    <%= menu.available? ? "Yes" : "No" %>
  </div>
</div>
