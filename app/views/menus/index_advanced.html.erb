<% content_for :title, "Menus" %>

<div class="w-full max-w-7xl mx-auto px-4 py-8" data-controller="menu-filter">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex flex-col gap-4 mb-6">
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl">Menus</h1>
      <div class="flex items-center gap-3">
        <div class="relative">
          <input
            data-menu-filter-target="input"
            data-action="input->menu-filter#search"
            type="text"
            placeholder="Rechercher un menu..."
            class="w-64 px-4 py-2 pr-10 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 absolute right-3 top-2.5 text-gray-400">
            <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
          </svg>
        </div>
        <% if user_signed_in? && current_user.admin? %>
          <%= link_to "Nouveau menu", new_menu_path, class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
        <% end %>
      </div>
    </div>

    <!-- Filtres par catégorie -->
    <div class="flex flex-wrap gap-2">
      <button 
        data-menu-filter-target="categoryBtn"
        data-category="all"
        data-action="click->menu-filter#filterByCategory"
        class="px-4 py-2 rounded-md text-sm font-medium transition-colors bg-blue-600 text-white">
        Tout
      </button>
      <% categories = @menus.pluck(:category).compact.uniq.sort %>
      <% categories.each do |category| %>
        <button 
          data-menu-filter-target="categoryBtn"
          data-category="<%= category %>"
          data-action="click->menu-filter#filterByCategory"
          class="px-4 py-2 rounded-md text-sm font-medium transition-colors bg-gray-100 text-gray-700 hover:bg-gray-200">
          <%= category %>
        </button>
      <% end %>
    </div>
  </div>

  <div id="menus" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% if @menus.any? %>
      <% @menus.each do |menu| %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow" 
             data-menu-filter-target="item" 
             data-category="<%= menu.category %>">
          <% if menu.image.attached? %>
            <%= image_tag menu.image, class: "w-full h-48 object-cover" %>
          <% else %>
            <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 text-gray-400">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
              </svg>
            </div>
          <% end %>
          
          <div class="p-4">
            <div class="flex justify-between items-start mb-2">
              <h3 class="font-bold text-xl flex-1"><%= menu.name %></h3>
              <% if menu.category.present? %>
                <span class="ml-2 px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
                  <%= menu.category %>
                </span>
              <% end %>
            </div>
            
            <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= menu.description %></p>
            
            <div class="flex justify-between items-center mb-3">
              <span class="text-lg font-semibold text-green-600">
                <%= number_to_currency(menu.price, unit: "FCFA ", precision: 0) %>
              </span>
            </div>
            
            <div class="flex gap-2">
              <%= link_to "Voir", menu, class: "flex-1 text-center rounded-md px-3 py-2 bg-gray-100 hover:bg-gray-200 text-sm font-medium" %>
              <% if user_signed_in? && current_user.admin? %>
                <%= link_to "Éditer", edit_menu_path(menu), class: "flex-1 text-center rounded-md px-3 py-2 bg-yellow-100 hover:bg-yellow-200 text-yellow-800 text-sm font-medium" %>
                <%= button_to "Supprimer", menu, method: :delete, class: "flex-1 rounded-md px-3 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium", data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer ce menu ?" } %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <div data-menu-filter-target="noResults" style="display: none;" class="col-span-full text-center my-10 text-gray-500"></div>
    <% else %>
      <p class="col-span-full text-center my-10 text-gray-500">Aucun menu trouvé.</p>
    <% end %>
  </div>
</div>
