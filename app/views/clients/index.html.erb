<% content_for :title, "Clients" %>

<div class="w-full" data-controller="search">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-4xl">Clients</h1>
    <div class="flex items-center gap-3">
      <div class="relative">
        <input
          data-search-target="input"
          data-action="input->search#filter"
          type="text"
          placeholder="Rechercher un client..."
          class="w-64 px-4 py-2 pr-10 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 absolute right-3 top-2.5 text-gray-400">
          <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
        </svg>
      </div>
      <%= link_to "New client", new_client_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>
  </div>

  <div id="clients" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @clients.any? %>
      <% @clients.each do |client| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0" data-search-target="item">
          <%= render client %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", client, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Edit", edit_client_path(client), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "Destroy", client, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
      <div data-search-target="noResults" style="display: none;" class="text-center my-10 text-gray-500"></div>
    <% else %>
      <p class="text-center my-10">No clients found.</p>
    <% end %>
  </div>
</div>
