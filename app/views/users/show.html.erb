<div class="max-w-4xl mx-auto py-8 px-4" data-controller="delete-confirm">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <!-- Header avec image de profil -->
    <div class="bg-gradient-to-r from-slate-700 to-slate-900 px-6 py-8">
      <div class="flex items-center space-x-6">
        <div class="flex-shrink-0">
          <div class="h-24 w-24 rounded-full bg-white flex items-center justify-center text-3xl font-bold text-slate-700">
            <%= @user.first_name.first.upcase %><%= @user.last_name.first.upcase %>
          </div>
        </div>
        <div class="flex-1">
          <h1 class="text-3xl font-bold text-white">
            <%= @user.first_name %> <%= @user.last_name %>
          </h1>
          <p class="text-slate-200 mt-1"><%= @user.email %></p>
          <div class="mt-3">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
              <%= case @user.role
                  when 'admin' then 'bg-purple-200 text-purple-900'
                  when 'chef' then 'bg-orange-200 text-orange-900'
                  when 'serveur' then 'bg-blue-200 text-blue-900'
                  else 'bg-gray-200 text-gray-900'
                  end %>">
              <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" />
              </svg>
              <%= @user.role&.capitalize || 'Utilisateur' %>
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Informations détaillées -->
    <div class="px-6 py-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Informations personnelles -->
        <div class="space-y-4">
          <h2 class="text-lg font-semibold text-slate-800 border-b pb-2">Informations personnelles</h2>
          
          <div>
            <label class="text-sm font-medium text-slate-600">Prénom</label>
            <p class="mt-1 text-slate-900"><%= @user.first_name %></p>
          </div>

          <div>
            <label class="text-sm font-medium text-slate-600">Nom</label>
            <p class="mt-1 text-slate-900"><%= @user.last_name %></p>
          </div>

          <div>
            <label class="text-sm font-medium text-slate-600">Email</label>
            <p class="mt-1 text-slate-900 break-all"><%= @user.email %></p>
          </div>

          <div>
            <label class="text-sm font-medium text-slate-600">Rôle</label>
            <p class="mt-1 text-slate-900"><%= @user.role&.capitalize || 'N/A' %></p>
          </div>
        </div>

        <!-- Informations du compte -->
        <div class="space-y-4">
          <h2 class="text-lg font-semibold text-slate-800 border-b pb-2">Informations du compte</h2>
          
          <div>
            <label class="text-sm font-medium text-slate-600">ID Utilisateur</label>
            <p class="mt-1 text-slate-900 font-mono">USER<%= @user.id.to_s.rjust(4, '0') %></p>
          </div>

          <div>
            <label class="text-sm font-medium text-slate-600">Date de création</label>
            <p class="mt-1 text-slate-900"><%= @user.created_at.strftime('%d/%m/%Y à %H:%M') %></p>
          </div>

          <div>
            <label class="text-sm font-medium text-slate-600">Dernière modification</label>
            <p class="mt-1 text-slate-900"><%= @user.updated_at.strftime('%d/%m/%Y à %H:%M') %></p>
          </div>

          <div>
            <label class="text-sm font-medium text-slate-600">Statut</label>
            <p class="mt-1">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <span class="w-2 h-2 mr-1.5 bg-green-400 rounded-full"></span>
                Actif
              </span>
            </p>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="mt-8 pt-6 border-t border-slate-200 flex flex-wrap gap-3">
        <%= link_to users_path, class: "inline-flex items-center px-4 py-2 border border-slate-300 rounded-md shadow-sm text-sm font-medium text-slate-700 bg-white hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Retour à la liste
        <% end %>

        <% if current_user.admin? %>
          <%= link_to edit_user_path(@user), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Modifier
          <% end %>

          <button
            data-action="click->delete-confirm#show"
            data-delete-url="<%= user_path(@user) %>"
            data-delete-name="<%= @user.first_name %> <%= @user.last_name %>"
            data-delete-message="Êtes-vous sûr de vouloir supprimer <%= @user.first_name %> <%= @user.last_name %> ?"
            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Supprimer
          </button>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Activités récentes (optionnel) -->
  <% if current_user.admin? %>
    <div class="mt-6 bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="px-6 py-4 bg-slate-50 border-b border-slate-200">
        <h2 class="text-lg font-semibold text-slate-800">Activité récente</h2>
      </div>
      <div class="px-6 py-4">
        <p class="text-slate-500 text-sm text-center py-8">Aucune activité récente à afficher</p>
      </div>
    </div>
  <% end %>
</div>
