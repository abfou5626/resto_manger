<div class="p-6">
  <h2 class="text-2xl font-bold text-slate-800 mb-6">Modifier l'utilisateur</h2>

  <%= form_with(model: @user, local: true, class: "space-y-6") do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded relative">
        <h3 class="font-medium">
          <%= pluralize(@user.errors.count, "erreur") %> <%= @user.errors.count > 1 ? "ont" : "a" %> empêché la sauvegarde :
        </h3>
        <ul class="mt-2 list-disc list-inside text-sm">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :first_name, "Prénom", class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= form.text_field :first_name, class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= form.label :last_name, "Nom", class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= form.text_field :last_name, class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= form.label :email, "Email", class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= form.email_field :email, class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= form.label :role, "Rôle", class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= form.select :role, 
            options_for_select([['Admin', 'admin'], ['Chef', 'chef'], ['Serveur', 'serveur']], @user.role),
            { include_blank: "Sélectionner un rôle" },
            class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= form.label :phone, "Téléphone", class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= form.text_field :phone, class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>

    <div class="border-t pt-6">
      <h3 class="text-sm font-medium text-slate-700 mb-3">Modifier le mot de passe (optionnel)</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :password, "Nouveau mot de passe", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          <p class="mt-1 text-xs text-slate-500">Laisser vide pour ne pas changer</p>
        </div>

        <div>
          <%= form.label :password_confirmation, "Confirmer le mot de passe", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>
    </div>

    <div class="flex justify-end space-x-3 pt-4 border-t">
      <button type="button" onclick="document.getElementById('close-modal').click()" class="px-4 py-2 border border-slate-300 rounded-md text-slate-700 hover:bg-slate-50">
        Annuler
      </button>
      <%= form.submit "Enregistrer les modifications", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>
</div>
