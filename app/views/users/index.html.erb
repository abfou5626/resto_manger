<div class="max-w-6xl mx-auto py-8 px-4">
  <h1 class="text-2xl font-bold mb-4">Liste des utilisateurs</h1>

  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">#</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rôle</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @users.each_with_index do |user, index| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap"><%= index + 1 %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= user.first_name %> <%= user.last_name %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= user.email %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= user.role %></td>
          <td class="px-6 py-4 whitespace-nowrap text-right space-x-2">
            <%= link_to 'Voir', user_path(user), class: 'text-indigo-600 hover:text-indigo-900' %>
            <%= link_to 'Éditer', edit_user_path(user), class: 'text-yellow-600 hover:text-yellow-800' %>
            <%= link_to 'Supprimer', user_path(user), method: :delete, data: { confirm: 'Supprimer cet utilisateur ?' }, class: 'text-red-600 hover:text-red-800' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4">
    <%= link_to 'Nouvel utilisateur', new_user_path, class: 'inline-block bg-green-600 text-white px-4 py-2 rounded' if current_user.admin? %>
  </div>
</div>
