<div class="max-w-7xl mx-auto py-6 px-4" data-controller="users delete-confirm">
  <div class="w-full flex justify-between items-center mb-3 mt-1 pl-3">
    <div>
      <h3 class="text-lg font-semibold text-slate-800">Gestion des utilisateurs</h3>
      <p class="text-slate-500">Liste complète des utilisateurs du système.</p>
    </div>
    <div class="ml-3 flex items-center space-x-3">
      <div class="w-full max-w-sm min-w-[200px] relative">
        <div class="relative">
          <input
            data-action="input->users#search"
            data-users-target="search"
            class="bg-white w-full pr-11 h-10 pl-3 py-2 bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded transition duration-200 ease focus:outline-none focus:border-slate-400 hover:border-slate-400 shadow-sm focus:shadow-md"
            placeholder="Rechercher un utilisateur..."
          />
          <button
            class="absolute h-8 w-8 right-1 top-1 my-auto px-2 flex items-center bg-white rounded"
            type="button"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" class="w-8 h-8 text-slate-600">
              <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
            </svg>
          </button>
        </div>
      </div>
      <% if current_user.admin? %>
        <%= link_to new_user_path, class: 'inline-flex items-center px-4 py-2 bg-slate-800 text-white text-sm font-medium rounded hover:bg-slate-600 transition duration-200 ease shadow-sm' do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
          Nouvel utilisateur
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="relative flex flex-col w-full h-full overflow-scroll text-gray-700 bg-white shadow-md rounded-lg bg-clip-border">
    <table class="w-full text-left table-auto min-w-max">
      <thead>
        <tr>
          <th class="p-4 border-b border-slate-200 bg-slate-50">
            <p class="text-sm font-normal leading-none text-slate-500">
              ID
            </p>
          </th>
          <th class="p-4 border-b border-slate-200 bg-slate-50">
            <p class="text-sm font-normal leading-none text-slate-500">
              Nom complet
            </p>
          </th>
          <th class="p-4 border-b border-slate-200 bg-slate-50">
            <p class="text-sm font-normal leading-none text-slate-500">
              Email
            </p>
          </th>
          <th class="p-4 border-b border-slate-200 bg-slate-50">
            <p class="text-sm font-normal leading-none text-slate-500">
              Rôle
            </p>
          </th>
          <th class="p-4 border-b border-slate-200 bg-slate-50">
            <p class="text-sm font-normal leading-none text-slate-500">
              Date de création
            </p>
          </th>
          <th class="p-4 border-b border-slate-200 bg-slate-50">
            <p class="text-sm font-normal leading-none text-slate-500 text-center">
              Actions
            </p>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr class="hover:bg-slate-50 border-b border-slate-200" data-users-target="row">
            <td class="p-4 py-5">
              <p class="block font-semibold text-sm text-slate-800">USER<%= user.id.to_s.rjust(4, '0') %></p>
            </td>
            <td class="p-4 py-5">
              <p class="text-sm text-slate-800 font-medium"><%= user.first_name %> <%= user.last_name %></p>
            </td>
            <td class="p-4 py-5">
              <p class="text-sm text-slate-500"><%= user.email %></p>
            </td>
            <td class="p-4 py-5">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                <%= case user.role
                    when 'admin' then 'bg-purple-100 text-purple-800'
                    when 'chef' then 'bg-orange-100 text-orange-800'
                    when 'serveur' then 'bg-blue-100 text-blue-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                <%= user.role&.capitalize || 'N/A' %>
              </span>
            </td>
            <td class="p-4 py-5">
              <p class="text-sm text-slate-500"><%= user.created_at.strftime('%Y-%m-%d') %></p>
            </td>
            <td class="p-4 py-5">
              <div class="flex justify-center items-center space-x-2">
                <%= link_to user_path(user), class: 'text-slate-600 hover:text-slate-900 transition duration-200', title: 'Voir' do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                <% end %>
                <%= link_to edit_user_path(user), class: 'text-blue-600 hover:text-blue-900 transition duration-200', title: 'Éditer' do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                  </svg>
                <% end %>
                <button
                  data-action="click->delete-confirm#show"
                  data-delete-url="<%= user_path(user) %>"
                  data-delete-name="<%= user.first_name %> <%= user.last_name %>"
                  data-delete-message="Êtes-vous sûr de vouloir supprimer <%= user.first_name %> <%= user.last_name %> ?"
                  class="text-red-600 hover:text-red-900 transition duration-200 cursor-pointer"
                  title="Supprimer">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                  </svg>
                </button>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <div class="flex justify-between items-center px-4 py-3">
      <div class="text-sm text-slate-500">
        Affichage de <b>1-<%= @users.count %></b> sur <%= @users.count %>
      </div>
      <div class="flex space-x-1">
        <button class="px-3 py-1 min-w-9 min-h-9 text-sm font-normal text-slate-500 bg-white border border-slate-200 rounded hover:bg-slate-50 hover:border-slate-400 transition duration-200 ease">
          Préc
        </button>
        <button class="px-3 py-1 min-w-9 min-h-9 text-sm font-normal text-white bg-slate-800 border border-slate-800 rounded hover:bg-slate-600 hover:border-slate-600 transition duration-200 ease">
          1
        </button>
        <button class="px-3 py-1 min-w-9 min-h-9 text-sm font-normal text-slate-500 bg-white border border-slate-200 rounded hover:bg-slate-50 hover:border-slate-400 transition duration-200 ease">
          Suiv
        </button>
      </div>
    </div>
  </div>
</div>
